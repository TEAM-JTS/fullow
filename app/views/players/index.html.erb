<script type="text/javascript">
$(function() {
    var availablePlayers = <%= raw @players_array %>;
    $( "#players" ).autocomplete({
      source: availablePlayers
    });
  });
</script>

<h1>Search</h1>
<div class="ui-widget">
  <label for="players">Players : </label>
  <input id="players" />
</div>


<h1>Player List</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <% @fullname = player.firstname.to_s + " " + player.lastname.to_s %>
        <td><%= link_to @fullname, player %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Player', new_player_path %>
